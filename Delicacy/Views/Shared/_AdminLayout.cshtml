<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/layer9.1/layer.js"></script>
    <script src="http://www.lanrenzhijia.com/ajaxjs/jquery.page.js"></script>
    <link href="~/Content/pager.css" rel="stylesheet" />
    <script type="text/javascript">
        function subjectArticle() {
            window.location.href = '/AdminSubjectArticle/Index';
        }
    </script>
</head>
<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="navbar-header" style="margin-left:20%;">
            <a class="navbar-brand" href="#">美食网后台管理网站</a>
        </div>
        <div class="pull -right" style="float: right;margin-right: 20%;">
            <ul class="nav navbar-nav">
                <li class="active">
                @if (ViewBag.user != null)
                {
                    <a href="javascirpt:;">@ViewBag.user.UserId</a>
                }
                else
                {
                    <a href="/AdminUser/Login">登录</a>
                }
                </li>
                <li><a href="/AdminUser/LogOut">退出</a></li>
            </ul>
        </div>
    </nav>
    <div class="panel-group pull-left" id="accordion" style="position:absolute;margin-left:20%;width:10%;">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion"
                       href="#collapseOne">
                        用户中心
                    </a>
                </h4>
            </div>
            <div id="" class="panel-collapse collapse in">
                <div>
                    <a href="/AdminUser/UserManager" class="list-group-item" id="userManager">用户管理</a>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion"
                       href="#collapseTwo">
                        菜谱管理
                    </a>
                </h4>
            </div>
            <div id="" class="panel-collapse collapse in">
                <div>
                    <a href="/AdminCookBook/Index?pageindex=1" class="list-group-item" id="" onclick="">菜谱审核</a>
                    <a href="#" class="list-group-item">菜谱评论管理</a>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion"
                       href="#collapseThree">
                        饮食专题管理
                    </a>
                </h4>
            </div>
            <div id="" class="panel-collapse collapse in">
                <div>
                    <a href="/AdminSubjectArticle/Manager?pageindex=1" class="list-group-item">饮食专题管理</a>
                    <a href="#" class="list-group-item">饮食专题评论管理</a>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion"
                       href="#collapseFour">
                        其他
                    </a>
                </h4>
            </div>
            <div id="" class="panel-collapse collapse in">
                <div>
                    <a href="#" class="list-group-item" id="" onclick="">食材管理</a>
                    <a href="#" class="list-group-item">口味管理</a>
                    <a href="#" class="list-group-item">分类管理</a>
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>
    <div class="pull-right" style="margin-bottom:50px;width:49%;margin-right:20%;">
        @RenderBody()
    </div>
</body>
</html>
