@model IEnumerable<DataTransfer.CommentRecordTsfer>

@{
    ViewBag.Title = "comments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        //分页
        $(".tcdPageCode").createPage({
            pageCount: parseInt('@ViewBag.pageCount'),
            current: parseInt('@ViewBag.pageIndex'),
            backFn: function (p) {
                window.location.href = '/AdminSubjectArticle/comments?pageindex=' + p;
            }
        });
    });
    function deletecomment(id) {
        $.ajax({
            type:"post",
            url: "/AdminSubjectArticle/DeleteComment",
            data:{id:id},
            success:function (o) {
                if(o.StatusCode==1){
                    layer.msg("成功");
                    setTimeout(function () {
                        location.reload();
                    },500);
                }
                else {
                    layer.msg("失败");
                }
            }
        });
    }
</script>
<div class="page-header">
    <h1>
        饮食专题评论管理
    </h1>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CommentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            菜谱名称
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RootId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                <a href="/SubjectArticle/Get?id=@item.OperateId">@item.OperateName</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RootId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a href="javascript:;" onclick="deletecomment(@item.CommentId)">Delete</a>
            </td>
        </tr>
    }

</table>
<div class="tcdPageCode">
</div>
